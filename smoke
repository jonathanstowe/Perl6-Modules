#!/bin/sh

STARTED=`date`
for DIR in * 
do 
    if [ -d $DIR ]
   	then
       OLDPWD=`pwd` 
        cd $DIR 
        echo Testing in $DIR
		git checkout master
		git pull
        panda --notests installdeps . >/dev/null 2>&1
        PANDA_SUBMIT_TESTREPORTS=1 panda-test 
        if [ $? == 0 ]
      	then 
        	echo $DIR OK
      	else
        	echo $DIR FAIL
      fi
        cd $OLDPWD 
   fi
done
echo Started  at $STARTED
echo Finished at `date`
